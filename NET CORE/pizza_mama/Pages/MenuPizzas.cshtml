@page
@model pizza_mama.Pages.MenuPizzasModel
@{
}

<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<title>Menu Pizzas</title>
<meta name="viewport" content="width=device-width,initial-scale=1">
<link rel="stylesheet" href="~/css/style.css">
<style>
</style>
<body>
        <a asp-page="Index">
        <img src="~/images/small_logo.png" id="small_logo"/>
        </a>
        <div class="menu_title">
            <h1>Les Pizzas</h1>
        </div>
        <div class="menu_list">
            @foreach(var pizza in Model.Pizza) {
                <div class="menu_list_item">
                    <span class="menu_list_title">@pizza.nom</span>
                    <span class="menu_list_prix">$ @String.Format("{0:0.00}", pizza.prix) </span>
                    <span class="menu_list_ingredients">@pizza.ingredients</span>
                    @if(pizza.vegetarienne) {
                    <span class="menu_list_badge">VEGETARIENNE</span>
                    }
                </div>
            }
        </div>

</body>
</html>



